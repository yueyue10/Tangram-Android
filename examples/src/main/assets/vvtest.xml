<FrameLayout action="action"
    background="#FFFFFF"
    flag="flag_exposure|flag_clickable"
    layoutHeight="84rp"
    layoutWidth="match_parent"
    xmlns="http://schemas.vv.com/apk/res/vv">

    <NImage layoutGravity="left|v_center"
        layoutHeight="48rp"
        layoutMarginLeft="34rp"
        layoutWidth="48rp"
        flag="flag_clickable"
        action="啊哈哈"
        scaleType="center_crop"
        src="${imgUrl}" />

    <NText layoutGravity="left|v_center"
        layoutHeight="wrap_content"
        layoutMarginLeft="94rp"
        layoutWidth="wrap_content"
        text="${title}"
        textColor="#555555"
        textSize="28rp" />

    <NText layoutGravity="right|v_center"
        layoutHeight="wrap_content"
        layoutMarginRight="50rp"
        layoutWidth="wrap_content"
        text="${subtitle}"
        textColor="${subtitleColor}"
        textSize="28rp" />

    <NImage layoutGravity="right|v_center"
        layoutHeight="30rp"
        layoutMarginRight="28rp"
        layoutWidth="14rp"
        scaleType="center_crop"
        src="${arrowImgUrl}" />

    <NLine color="#999999"
        layoutGravity="h_center|bottom"
        layoutHeight="1rp"
        layoutWidth="680rp"
        orientation="H"
        src="${lineImgUrl}" />
</FrameLayout>